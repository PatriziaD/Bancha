<div class="jumbotron">
<div class= "thumbnail">
  <%= image_tag "https://s3-eu-west-1.amazonaws.com/bancha/logo.png" %>
</div>
<div class="jumbotron">
  <h2>Meet locals to share<br>
    houses, interesting tours and funny experiences</h2>
  <h2>The best way to manage your travel<br>
    for leisure, religious, health or business purposes</h2>
</div>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= listing.description %></p>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>