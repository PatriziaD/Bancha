<div class= "thumbnail">
  <%= image_tag "https://s3-eu-west-1.amazonaws.com/bancha/logo.png" %>
</div>
<div class="jumbotron">
  <h2>Meet locals to share<br>
    houses, interesting tours and funny experiences</h2>
  <h3>The best way to manage your travel<br>
    for leisure, religious, health or business purposes</h3>
</div>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  

  
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag listing.image.url %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= listing.description %></p>
            <p><%= number_to_currency(listing.price) %></p>
            
            <%= link_to 'Show', listing, class: "btn btn-link" %>
            <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
            <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</table>

<br>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
